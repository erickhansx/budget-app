
<div class="container container-custom">
  <% @entities.each do |entity| %>
    <div class="card-custom">
      <div class="img-container">
        <%= image_tag("#{rand(1..10)}.webp", class:"img-rnd", alt: "...") %>
      </div>
      <div>
        <div>
          <h5><%= entity.name%></h5>
        <small> Created at <%= time_ago_in_words(entity.created_at) %> </small></p>
        </div>
      </div>
    </div>
  <%end%>
</div>
<div class="btn-div">
  <%= link_to "New Entity", new_entity_path, class: "btn-custom" %>
</div>
